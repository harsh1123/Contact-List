<html>
    <head>
        <title>
            <%= title %>
        </title>
        <script src="https://kit.fontawesome.com/45b326f848.js" crossorigin="anonymous"></script>
        <link rel="stylesheet" href="/css/home.css">
    </head>
    <body>
        <div class="my-heading">
            
        <h1>
            <i class="fas fa-address-book"></i> My Contact List</h1>
        </div>

        <div class="list-use">
             <ul >
                 <% for(let i of contact_list) { %>
                  
                   <li>
                     <div class="main-div">
                       <div class="div1">
                           <%= i.name %>
                       </div>
                       <div class="div2">
                           <%= i.phone %>
                       </div>
                       <div class="delete-button">
                           <a href="/delete-contact/?id=<%= i._id %>">
                            <i class="far fa-window-close"></i>

                           </a>
                       </div>


                     </div>


                   </li>

              


                    <% }%>


             </ul>





        </div>
       <div class="form-div">
        <form action="/create-contact" method="POST">
            <input type="name" name="name" placeholder="Enter Name" required>
            <input type="number" name="phone" placeholder="Enter Number" required>

            <button type="submit">Add Contact</button>
        </form>

    </div>

    </body>
    <script src="/js/home.js"></script>
</html>